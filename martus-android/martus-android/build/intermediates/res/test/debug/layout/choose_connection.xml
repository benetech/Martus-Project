<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginLeft="20dip"
        android:layout_gravity="left"
        android:onClick="useDefaultServer"
        android:text="@string/use_default_server"
        android:contentDescription="@string/use_default_server"
        android:id="@+id/useDefaultServer"
        style="@style/Widget.Button"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginLeft="20dip"
        android:layout_gravity="left"
        android:onClick="useAdvancedServerOptions"
        android:text="@string/advanced_server_options"
        android:contentDescription="@string/advanced_server_options"
        android:id="@+id/useAdvancedServerOptions"
        android:linksClickable="true"
        android:autoLink="all"
        android:clickable="true"
        style="@style/MartusTextViewStyle"
    />


